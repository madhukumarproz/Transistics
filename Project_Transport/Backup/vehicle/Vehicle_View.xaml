            <ComboBox Name="trailer" Height="30" Width="120" Margin="-250,-30,0,0" Text="SELECT" HorizontalContentAlignment="Center" IsEditable="True" KeyDown="trailer_keydown" GotFocus="trailer_GotFocus">
                
