            <ComboBox Name="hpc" Height="30" Width="120" Margin="-500,-30,0,0" Text="SELECT" HorizontalContentAlignment="Center" IsEditable="True" KeyDown="hpc_keydown" GotFocus="hpc_GotFocus" >
                
