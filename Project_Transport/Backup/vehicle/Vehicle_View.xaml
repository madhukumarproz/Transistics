            <ComboBox Name="bpc" Height="30" Width="120" Margin="-750,-30,0,0" Text="SELECT" HorizontalContentAlignment="Center" IsEditable="True" KeyDown="bpc_keydown" GotFocus="bpc_GotFocus">
                
